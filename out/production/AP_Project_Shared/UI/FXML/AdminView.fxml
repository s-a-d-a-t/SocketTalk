<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UI.Controllers.AdminController" styleClass="root">
   <top>
      <VBox spacing="10.0" style="-fx-background-color: white; -fx-border-color: #e5e7eb; -fx-border-width: 0 0 1 0;">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #111827;" text="Admin Dashboard" />
                  <Label fx:id="adminNameLabel" style="-fx-font-size: 14px; -fx-text-fill: #6b7280;" text="(Admin Name)" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Button fx:id="refreshBtn" mnemonicParsing="false" onAction="#handleRefresh" styleClass="button-primary" text="Refresh Data" />
                  <Button fx:id="logoutBtn" mnemonicParsing="false" onAction="#handleLogout" styleClass="button-secondary" text="Logout" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <ScrollPane fitToWidth="true" style="-fx-background: -bg-main;">
         <content>
            <VBox spacing="25.0">
               <children>
                  <!-- Statistics Cards -->
                  <HBox alignment="CENTER" spacing="20.0">
                     <children>
                        <!-- Total Users Card -->
                        <VBox alignment="CENTER" styleClass="admin-card" HBox.hgrow="ALWAYS" spacing="10.0" minWidth="200.0">
                           <children>
                              <Label styleClass="stat-label" text="Total Users" />
                              <Label fx:id="totalUsersLabel" styleClass="stat-number" text="0" />
                           </children>
                           <padding>
                              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                           </padding>
                        </VBox>
                        
                        <!-- Online Users Card -->
                        <VBox alignment="CENTER" styleClass="admin-card" HBox.hgrow="ALWAYS" spacing="10.0" minWidth="200.0">
                           <children>
                              <Label styleClass="stat-label" text="Online Now" />
                              <Label fx:id="onlineUsersLabel" styleClass="stat-number" text="0" />
                           </children>
                           <padding>
                              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                           </padding>
                        </VBox>
                        
                        <!-- Messages Sent Card -->
                        <VBox alignment="CENTER" styleClass="admin-card" HBox.hgrow="ALWAYS" spacing="10.0" minWidth="200.0">
                           <children>
                              <Label styleClass="stat-label" text="Total Messages" />
                              <Label fx:id="totalMessagesLabel" styleClass="stat-number" text="0" />
                           </children>
                           <padding>
                              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                           </padding>
                        </VBox>
                     </children>
                  </HBox>
                  
                  <!-- User List Table -->
                  <VBox spacing="10.0" styleClass="admin-card">
                     <children>
                        <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #111827;" text="Registered Users" />
                        <TableView fx:id="usersTable" styleClass="admin-table" prefHeight="350.0">
                           <columns>
                              <TableColumn fx:id="idColumn" prefWidth="100.0" text="ID" />
                              <TableColumn fx:id="nameColumn" prefWidth="200.0" text="Name" />
                              <TableColumn fx:id="roleColumn" prefWidth="150.0" text="Role" />
                              <TableColumn fx:id="statusColumn" prefWidth="150.0" text="Status" />
                              <TableColumn fx:id="actionColumn" prefWidth="150.0" text="Actions" />
                           </columns>
                        </TableView>
                     </children>
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>
   </center>
</BorderPane>
